{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}